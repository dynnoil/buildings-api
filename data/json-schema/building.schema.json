{
    "bsonType": "object",
    "required": [
        "name",
        "description",
        "location.address",
        "location.geoPosition"
    ],
    "properties": {
        "name": {
            "bsonType": "string",
            "description": "A name of a building",
            "maxLength": 140
        },
        "description": {
            "bsonType": "string",
            "description": "A short description of a building",
            "maxLength": 280
        },
        "image": {
            "bsonType": "string",
            "description": "An url to a building image",
            "pattern": "^([--:\\w?@%&+~#=]*\\.[a-z]{2,4}\/{0,2})((?:[?&](?:\\w+)=(?:\\w+))+|[--:\\w?@%&+~#=]+)?$"
        },
        "content": {
            "bsonType": "string",
            "description": "A content of a building post"
        },
        "location.address": {
            "bsonType": "string",
            "maxLength": 280,
            "description": "An address of a building"
        },
        "location.geoPosition": {
            "bsonType": "object",
            "description": "A geo position of a building",
            "required": [
                "latitude",
                "longitude"
            ],
            "properties": {
                "latitude": {
                    "bsonType": "double",
                    "description": "A latitude coordinate"
                },
                "longitude": {
                    "bsonType": "double",
                    "description": "A longitude coordinate"
                }
            },
            "additionalProperties": false
        },
        "architects": {
            "bsonType": "array",
            "description": "A list of architects",
            "items": {
                "bsonType": "string",
                "description": "A fullname of an architect",
                "maxLength": 140
            },
            "uniqueItems": true
        },
        "creationYears": {
            "bsonType": "array",
            "description": "Creation years of a building",
            "items": {
                "bsonType": "int",
                "minimum": 0,
                "description": "A creation year of a building"
            },
            "uniqueItems": true
        },
        "architecturalStyle": {
            "bsonType": "string",
            "description": "An architectural style of a building",
            "maxLength": 140
        }
    },
    "additionalProperties": false
}